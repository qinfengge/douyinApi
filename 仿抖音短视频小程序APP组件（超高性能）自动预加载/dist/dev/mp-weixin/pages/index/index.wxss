.video-layer {
  position: absolute;
  right: 12px;
  bottom: 120px;
  color: #fff;
}
.video-bottom-area {
  position: absolute;
  left: 20px;
  bottom: 30px;
  z-index: 999;
}
.video-bottom-area .shop-name {
  color: #fff;
  margin-bottom: 4px;
}
.video-bottom-area .shop-card {
  width: 160px;
  height: 80px;
  background-color: rgba(255, 255, 255, 0.5);
  border-radius: 4px;
}
.video-side-right {
  position: absolute;
  right: 12px;
  bottom: 120px;
  color: #fff;
  z-index: 999;
}
.video-side-right .action-item {
  position: relative;
  margin-bottom: 20px;
  text-align: center;
}
.video-side-right .action-item .shop-logo {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  overflow: hidden;
}
.video-side-right .action-item .iconfont {
  display: block;
  font-size: 28px;
}
.video-side-right .action-item .action-item-text {
  display: block;
  font-size: 12px;
}
.video-side-right .action-item .action-btn {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: -8px;
  width: 20px;
  height: 20px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f60;
}
.video-side-right .action-item .action-btn .iconfont {
  font-size: 16px;
}
.video-side-right .action-item-user {
  margin-bottom: 40px;
}