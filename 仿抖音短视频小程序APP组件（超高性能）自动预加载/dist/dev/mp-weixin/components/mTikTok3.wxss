@font-face {
  font-family: "m-tiktok-play-icon";
  src: url(data:font/woff2;charset=utf-8;base64,) format("woff2");
  font-weight: normal;
  font-style: normal;
  font-display: swap;
}
.m-tiktok-video-iconfont {
  font-family: m-tiktok-play-icon;
}
.m-tiktok-video-swiper,
.m-tiktok-video-player {
  width: 100%;
  height: 100vh;
  background-color: #000;
}
.m-tiktok-video-swiper .swiper-item {
  position: relative;
}
.m-tiktok-video-swiper .m-tiktok-video-poster {
  background-color: #000;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}
.m-tiktok-video-swiper .m-tiktok-video-play-btn {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}
.m-tiktok-video-swiper .m-tiktok-video-play-btn .video-icon {
  font-size: 50px;
  display: block;
  color: rgba(255, 255, 255, 0.8);
  opacity: 0;
}
.m-tiktok-video-swiper .m-tiktok-video-play-btn .video-icon.active {
  opacity: 1;
}
.m-tiktok-video-swiper .m-tiktok-images-swiper,
.m-tiktok-video-swiper .m-tiktok-images-image {
  width: 100%;
  height: 100vh;
}